<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    >

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="KTN"
        android:id="@+id/ktn"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/kbc"
        android:layout_alignEnd="@+id/kbc"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CITIZEN"
        android:id="@+id/citizen"
        android:layout_below="@+id/ktn"
        android:layout_marginTop="117dp"
        android:layout_alignRight="@+id/ntv"
        android:layout_alignEnd="@+id/ntv"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NATION"
        android:id="@+id/ntv"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="KBC"
        android:id="@+id/kbc"
        android:layout_gravity="bottom|top"
        android:layout_below="@+id/ktn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="41dp"
        android:layout_alignRight="@+id/citizen"
        android:layout_alignEnd="@+id/citizen" />



    </RelativeLayout>